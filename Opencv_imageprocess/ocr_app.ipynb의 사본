='*20}\\n\"\n","                text += page_text\n","\n","                # ë©”ëª¨ë¦¬ ì •ë¦¬\n","                image.close()\n","                del image, images, page_text\n","                gc.collect()\n","\n","                processed_pages += 1\n","                progress_widget.value = page_num\n","\n","            except Exception as e:\n","                if \"Unable to get page count\" in str(e) or \"Invalid page\" in str(e):\n","                    status_widget.value = f\"<b style='color: orange;'>âš ï¸ í˜ì´ì§€ {page_num}ì—ì„œ ì¢…ë£Œ (ì´ {processed_pages}í˜ì´ì§€ ì²˜ë¦¬)</b>\"\n","                    break\n","                else:\n","                    status_widget.value = f\"<b style='color: red;'>âŒ í˜ì´ì§€ {page_num} ì²˜ë¦¬ ì˜¤ë¥˜</b>\"\n","                    continue\n","\n","        progress_widget.value = progress_widget.max\n","        status_widget.value = f\"<b style='color: green;'>âœ… í…ìŠ¤íŠ¸ ì¶”ì¶œ ì™„ë£Œ! (ì´ {processed_pages}í˜ì´ì§€)</b>\"\n","\n","        extracted_text_global = text\n","        return text\n","\n","    except Exception as e:\n","        status_widget.value = f\"<b style='color: red;'>âŒ ì˜¤ë¥˜: {str(e)}</b>\"\n","        return None\n","\n","def analyze_text_widget(text, progress_widget, status_widget):\n","    \"\"\"ìœ„ì ¯ê³¼ í•¨ê»˜ í…ìŠ¤íŠ¸ ë¶„ì„\"\"\"\n","    global analysis_result_global\n","\n","    try:\n","        if not text or len(text.strip()) < 10:\n","            return \"ì¶”ì¶œëœ í…ìŠ¤íŠ¸ê°€ ì—†ê±°ë‚˜ ë„ˆë¬´ ì§§ìŠµë‹ˆë‹¤.\"\n","\n","        status_widget.value = \"<b style='color: blue;'>ğŸ” AI ë¶„ì„ ì‹œì‘...</b>\"\n","        progress_widget.value = 0\n","        progress_widget.max = 100\n","\n","        # í…ìŠ¤íŠ¸ë¥¼ ì²­í¬ë¡œ ë¶„í• \n","        chunk_size = 15000\n","        chunks = []\n","        for i in range(0, len(text), chunk_size):\n","            chunk = text[i:i + chunk_size]\n","            if chunk.strip():\n","                chunks.append(chunk)\n","\n","        status_widget.value