or, TypeError) as e: # 'price' í‚¤ê°€ ì—†ê±°ë‚˜, tradeê°€ dictê°€ ì•„ë‹Œ ê²½ìš°\n","            print(f\"âŒ ì‹œì¥ ë°ì´í„°(ê±°ë˜ ë‚´ì—­) ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜: {e}\")\n","            return None\n","        except ValueError as e:\n","            print(f\"âŒ ì‹œì¥ ë°ì´í„°(ê±°ë˜ ë‚´ì—­)ì˜ ê°€ê²©ì„ ìˆ«ìë¡œ ë³€í™˜í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤: {e}\")\n","            return None\n","\n","        df['sma_5'] = df['price'].rolling(window=5).mean()\n","        df['sma_10'] = df['price'].rolling(window=10).mean()\n","\n","        ticker_data = self.get_ticker()\n","        if not ticker_data:\n","            return None\n","\n","        try:\n","            current_price_str = ticker_data.get('close') # 'close' í‚¤ê°€ ì—†ì„ ìˆ˜ ìˆìœ¼ë¯€ë¡œ .get() ì‚¬ìš©\n","            if current_price_str is None:\n","                print(f\"âŒ Ticker ë°ì´í„°ì—ì„œ 'close' í‚¤ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ë°›ì€ ë°ì´í„°: {ticker_data}\")\n","                return None\n","            current_price = float(current_price_str)\n","        except ValueError:\n","            print(f\"âŒ Ticker ë°ì´í„°ì˜ 'close' ê°’ì„ ìˆ«ìë¡œ ë³€í™˜í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ê°’: {current_price_str}\")\n","            return None\n","        except Exception as e: # ê¸°íƒ€ ì˜ˆì™¸ ì²˜ë¦¬\n","            print(f\"âŒ Ticker ë°ì´í„° ì²˜ë¦¬ ì¤‘ ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜: {e}\")\n","            return None\n","\n","\n","        # ë°ì´í„°ê°€ ì¶©ë¶„í•˜ì§€ ì•Šìœ¼ë©´ ì´ë™í‰ê· ì´ NaNì¼ ìˆ˜ ìˆìŒ. ì´ ê²½ìš° í˜„ì¬ê°€ë¡œ ëŒ€ì²´.\n","        sma_5 = df['sma_5'].iloc[-1] if not pd.isna(df['sma_5'].iloc[-1]) else current_price\n","        sma_10 = df['sma_10'].iloc[-1] if not pd.isna(df['sma_10'].iloc[-1]) else current_price\n","\n","        print(f\"í˜„ì¬ê°€: {current_price:,.0f}ì›\")\n","        print(f\"5ì¼ í‰ê· : {sma_5:,.0f}ì› (ë°ì´í„° ìˆ˜: {len(df)})\")\n","        print(f\"10ì¼ í‰ê· : {sma_10:,.0f}ì› (ë°ì´í„° ìˆ˜: {len(df)})\")\n","\n","        if sma_5 > sma_10 and current_price > sma_5:\n","            return \"BUY\"\n","        elif sma_5 < sma_10 and current_price < sma_5:\n","            return \"SELL\"\n","        else:\n","            return \"HOLD\"\n","\n","    def calculate_position_size(self, price_per_btc):\n","        \"\"\"í¬ì§€ì…˜ í¬ê¸°(BTC ìˆ˜ëŸ‰) ê³„ì‚°\"\"\"\n","        balance_data = self.get_balance()\n","        if not balance_data:\n","            print(\"âš ï¸ ì”ê³  ì¡°íšŒ ì‹¤íŒ¨ë¡œ í¬ì§€ì…˜ í¬ê¸° ê³„ì‚° ë¶ˆê°€\")\n","            return 0\n","\n","        krw_balance = 0\n","        for account in balance_data:\n","            if account.get('currency') == 'krw':\n","                try:\n","                    krw_balance = float(account.get('available', 0))\n","                except ValueError:\n","                    print(f\"âš ï¸ KRW ì”ê³  ê°’ ë³€í™˜ ì˜¤ë¥˜: {account.get('available')}\")\n","                    krw_balance = 0\n","                break\n","\n","        print(f\"í˜„ì¬ KRW ì”ê³ : {krw_balance:,.0f}ì›\")\n","\n","        investable_krw = min(self.max_investment, krw_balance)\n","        print(f\"íˆ¬ì ì„¤ì •ì•¡: {self.max_investment:,.0f}ì›, ì‹¤ì œ íˆ¬ì ê°€ëŠ¥ì•¡: {investable_krw:,.0f}ì›\")\n","\n","        if investable_krw < self.min_order_amount:\n","            print(f\"âš ï¸ íˆ¬ì ê°€ëŠ¥ì•¡({investable_krw:,.0f}ì›)ì´ ìµœì†Œ ì£¼ë¬¸ì•¡({self.min_order_amount:,.0f}ì›)ë³´ë‹¤ ì‘ìŠµë‹ˆë‹¤.\")\n","            return 0\n","\n","        if price_per_btc <= 0:\n","            print(\"âš ï¸ BTC ê°€ê²©ì´ 0 ì´í•˜ì´ë¯€ë¡œ ìˆ˜ëŸ‰ ê³„ì‚° ë¶ˆê°€.\")\n","            return 0\n","\n","        # BTC êµ¬ë§¤ ìˆ˜ëŸ‰ ê³„ì‚° (ìˆ˜ìˆ˜ë£Œ ë¯¸ê³ ë ¤)\n","        btc_amount = investable_krw / price_per_btc\n","        return round(btc_amount, 8)\n","\n","    def run_trading_loop(self, interval=60, max_iterations=None): # ìˆ˜ì •ë¨\n","        \"\"\"ê±°ë˜ ë£¨í”„ ì‹¤í–‰\"\"\"\n","        print(\"ğŸš€ ìë™ê±°ë˜ ì‹œì‘!\")\n","        print(f\"ê±°ë˜ í˜ì–´: {self.currency_pair.upper()}\")\n","        print(f\"ìµœëŒ€ íˆ¬ì ì„¤ì •ì•¡ (1íšŒ): {self.max_investment:,.0f}ì›\")\n","        print(f\"ìµœì†Œ ì£